        <header id="header-2">      
        <div class="main-cont-srch">     
            <div class="search-cont">
                <form action="/search_results" method="get">
                    <div class="search-b">
                        <input type="text" name="title" id="Search-query" size="40" placeholder="Search Products">
                        <button type="submit" class="btn"><i class="fas fa-search"></i>&nbsp;<span>Search</span></button>
                    </div>                    
